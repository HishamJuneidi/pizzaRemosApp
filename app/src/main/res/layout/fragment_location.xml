<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/engagement"
            android:gravity="center"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/engagement"
            android:gravity="center"
            android:text="35 Bedford St., Stamford"
            android:textColor="#000000"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <ImageView
            android:id="@+id/logo3"
            android:layout_width="261dp"
            android:layout_height="133dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/logo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textViewOpenTime"
            android:layout_width="246dp"
            android:layout_height="59dp"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="88dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:text="OPENING TIMES"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo3" />

        <TextView
            android:id="@+id/textViewDays"
            android:layout_width="148dp"
            android:layout_height="214dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="MONDAY\nTUESDAY\nWEDNESDAY\nTHURSDAY\nFRIDAY\nSATURDAY\nSUNDAY
                            "
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewOpenTime" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="227dp"
            android:layout_height="218dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="11:00 AM - 10:00 PM\n11:00 AM - 10:00 PM\n11:00 AM - 10:00 PM\n11:00 AM - 10:00 PM\n11:00 AM - 11:00 PM\n11:00 AM - 11:00 PM\n11:00 AM - 10:00 PM
                            "
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewDays"
            app:layout_constraintTop_toBottomOf="@id/textViewOpenTime" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/engagement"
            android:text="call us and find out more"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/textViewPhonNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textViewPhonNumber"
            android:layout_width="166dp"
            android:layout_height="33dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/engagement"
            android:text="203 973 0077"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="23sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>